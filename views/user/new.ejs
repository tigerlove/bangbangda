<div class="main">
  <div class='container'>
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <div class='panel'>
          <div class='panel-heading'>
            <h3 class='panel-title'><%= __('signup')%></h3> 
          </div>
          <div class='panel-body'>
            <form accept-charset='UTF-8' action='/signup' method="POST">
                <% if(req.options.err){%>
                <div class="alert alert-warning">
                    <a class="close" data-dismiss="alert">x</a>
                    <%= req.options.err%>
                </div>
                <% } %>
              <div class="form-group">
                <label for='username' class='control-label'>  <%= __('user')['new']['username']%></label>
                <input type='text' class='form-control' id='username' name='username' tabIndex="1"/>
              </div>

              <div class="form-group">
                <label for='email' class='control-label'>  <%= __('user')['new']['email']%></label>
                <input type='text' class='form-control' id='email' name='email' tabIndex="2"/>
              </div>

              <div class="form-group">
                <label for='displayname' class='control-label'>  <%= __('user')['new']['displayname']%></label>
                <input type='text' class='form-control' id='displayname' name='displayname' tabIndex="3"/>
              </div>

              <div class="form-group">
                <label for='password' class='control-label'>  <%= __('user')['new']['password']%></label>
                <input type='password' class='form-control' id='password' name='password' tabIndex="4"/>
              </div>

              <div class="form-group">
                <label for='password_confirmation' class='control-label'>  <%= __('user')['new']['confirm_password']%></label>
                <input type='password' class='form-control' id='password_confirmation' name='password_confirmation' tabIndex="5"/>
              </div>
                <input type='hidden' name='_csrf' value='<%= _csrf %>'>
              <input class='btn btn-success' name='commit' value='<%= __('signup')%>' type='submit' tabIndex='5'>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>